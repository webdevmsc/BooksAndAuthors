@model Test.ViewModels.EditViewModels.EditBookViewModel
@{
    ViewBag.Title = "Edit author";
    Layout = "_Layout";
}

@*Editing book*@

<form class="form" asp-action="Edit" asp-controller="Books" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" asp-for="Id">
        <label asp-for="Title" class="control-label">Title</label>
        <input type="text" asp-for="Title" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Description</label>
        <input type="text" asp-for="Description" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Edition" class="control-label">Edition</label>
        <input type="text" asp-for="Edition" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Published</label>
        <input type="date" asp-for="PublishedAt" class="form-control" />
    </div>
    @await Html.PartialAsync("_GetAuthors", Model.Id)
    <div class="form-group">
        <input type="submit" class="form-control" />
    </div>
</form>