@model Test.ViewModels.EditViewModels.EditAuthorViewModel
@{
    ViewBag.Title = "Edit author";
    Layout = "_Layout";
}

@*Editing author*@

<form class="form" asp-action="Edit" asp-controller="Authors" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" asp-for="Id">
        <label asp-for="FullName" class="control-label">Full Name</label>
        <input type="text" asp-for="FullName" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Dob" class="control-label">Date of Birth</label>
        <input type="date" asp-for="Dob" class="form-control" />
    </div>
    @await Html.PartialAsync("_GetBooks", Model.Id)
    <div class="form-group">
        <input type="submit" class="form-control" />
    </div>
</form>


