@model Test.ViewModels.CreateViewModels.CreateNewAuthorViewModel
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

@*Creating new author*@

<form asp-action="Create" asp-controller="Authors" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="FullName" class="control-label">Title</label>
        <input type="text" asp-for="FullName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Dob" class="control-label">Title</label>
        <input type="date" asp-for="Dob" class="form-control" />
    </div>
    @await Html.PartialAsync("_GetBooks")
    <div class="form-group">
        <input type="submit" class="form-control" />
    </div>
</form>